{
  "name": "task-orchestrator",
  "description": "Skills, hooks, and workflows for MCP Task Orchestrator. Adds task management patterns, status progression guidance, session-start auto-overview, and an optional orchestrator output style for team coordination.",
  "version": "2.0.0",
  "author": {
    "name": "Jeff Picklyk",
    "url": "https://github.com/jpicklyk"
  },
  "homepage": "https://github.com/jpicklyk/task-orchestrator",
  "repository": "https://github.com/jpicklyk/task-orchestrator",
  "license": "MIT",
  "keywords": ["task-management", "project-management", "workflow", "mcp", "ai-orchestration"],
  "outputStyles": "./output-styles/",
  "mcpServers": {
    "mcp-task-orchestrator": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "-v", "mcp-task-data:/app/data",
        "-v", "${CLAUDE_PROJECT_DIR}:/project:ro",
        "-e", "AGENT_CONFIG_DIR=/project",
        "-e", "USE_FLYWAY=true",
        "ghcr.io/jpicklyk/task-orchestrator:latest"
      ]
    }
  }
}
